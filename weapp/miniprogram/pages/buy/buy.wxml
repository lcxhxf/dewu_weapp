<view class="page">
  <view class="weui-buy">
    <view class="weui-hd">
        <view class="weui-hd-search" bindtap="gotoSearch">
          <van-search placeholder="搜索单号"/>
        </view>
        <view class="weui-kinds" bindtap="kinds">
          <image  src="../../images/kinds.png"></image>
        </view>
      </view>
      <view class="weui-tab">
        <van-tabs animated active="{{ active }}"
        color="white"
        swipeable
        title-inactive-color="#cccccc"
        title-active-color="#000000"
