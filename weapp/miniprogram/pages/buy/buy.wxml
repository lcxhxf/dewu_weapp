        正品保障
        </van-grid-item>
        <van-grid-item use-slot >
        <image style="width:24rpx;height:24rpx;" src="../../images/produce_tip2.png"></image>
        逐件查验
        </van-grid-item>
        <van-grid-item use-slot >
        <image style="width:24rpx;height:24rpx;" src="../../images/produce_tip3.png"></image>
        多重鉴别
        </van-grid-item>
      </van-grid>
            </view>
    <view class="van-items">
            <van-grid class="van-grid-bd" column-num="2">
              <van-grid-item use-slot >
